<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='admin-style.css') }}">
</head>
<body>
    <div class="admin-container">
        <h1>Admin Panel</h1>
        <a href="{{ url_for('logout') }}" class="logout-button">Logout</a>
        <h2>Add S3 Bucket</h2>
        <form action="{{ url_for('admin.add_bucket') }}" method="POST">
            <div class="input-group">
                <label for="user_id">User</label>
                <select name="user_id" id="user_id" required>
                    {% for user in users %}
                    <option value="{{ user.id }}">{{ user.username }} ({{ user.email }})</option>
                    {% endfor %}
                </select>
            </div>
            <div class="input-group">
                <label for="aws_access_key_id">AWS Access Key ID</label>
                <input type="text" id="aws_access_key_id" name="aws_access_key_id" required>
            </div>
            <div class="input-group">
                <label for="aws_secret_access_key">AWS Secret Access Key</label>
                <input type="text" id="aws_secret_access_key" name="aws_secret_access_key" required>
            </div>
            <div class="input-group">
                <label for="bucket_name">Bucket Name</label>
                <input type="text" id="bucket_name" name="bucket_name" required>
            </div>
            <button type="submit">Add Bucket</button>
        </form>
        <h2>Users</h2>
        <ul>
            {% for user in users %}
            <li>{{ user.username }} ({{ user.email }})</li>
            {% endfor %}
        </ul>
    </div>
</body>
</html>

